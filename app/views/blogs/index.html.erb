<section id="content">
  <div class="container">
    <div class="row">
      <div class="span8">
        <%= notice %>
        <% @blogs.each do |blog| %>
          <article>
            <div class="row">
              <div class="span8">
                <div class="post-image">
                  <div class="post-heading">
                    <h3>
                      <%= link_to blog do %>
                        <%= blog.title %>
                      <% end %>
                    </h3>
                  </div>
                  <!--<img src="img/dummies/blog/img1.jpg" alt="" />-->
                </div>
                <p>
                  <%= blog.content %>
                </p>
                <div class="bottom-article">
                  <ul class="meta-post">
                    <li>
                      <i class="icon-calendar"></i>
                      <%= link_to blog.created_at.strftime("%b %e, %Y"), blog %>
                    </li>
                    <li>
                      <i class="icon-user"></i>
                      <a href="#"> Admin</a>
                    </li>
                    <li>
                      <i class="icon-folder-open"></i>
                      <a href="#"> Blog</a>
                    </li>
                    <li>
                      <i class="icon-comments"></i>
                      <a href="#">4 Comments</a>
                    </li>
                    <li>
                      <i class="icon-pencil"></i>
                      <%= link_to 'Edit', edit_blog_path(blog) %>
                    </li>
                    <li>
                      <i class="icon-trash"></i>
                      <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </li>
                  </ul>
                  <%= link_to blog, class: "pull-right" do %>
                    Continue reading <i class="icon-angle-right"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </article>
        <% end %>

        <%= will_paginate @blogs, renderer: BootstrapPagination::Rails  %>

        <div id="pagination">
          <span class="all">Page 1 of 3</span>
          <span class="current">1</span>
          <a href="#" class="inactive">2</a>
          <a href="#" class="inactive">3</a>
        </div>
      </div>

      <%= render "sidebar" %>

    </div>
  </div>
</section>
