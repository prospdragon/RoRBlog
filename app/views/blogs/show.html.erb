<div class="main">
  <div class="container">

    <%= render "layouts/headline" %>

    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">
      <!-- BEGIN CONTENT -->
      <div class="col-md-12 col-sm-12">
        <h1><%= @title %></h1>
        <div class="content-page">
          <div class="row">
            <!-- BEGIN LEFT SIDEBAR -->
            <div class="col-md-9 col-sm-9 blog-item">

              <% if notice %>
                <div class="alert alert-success" role="alert">
                  <%= notice %>
                </div>
              <% end %>

              <div class="blog-item-img">
                <img src="/img/posts/img3.jpg" alt="">
              </div>
              <h2><a href="javascript:;"><%= @blog.title %></a></h2>
              <p>
                <%= @blog.content %>
              </p>
              <ul class="blog-info">
                <li><i class="fa fa-user"></i> By admin</li>
                <li><i class="fa fa-calendar"></i> <%= @blog.created_at.strftime("%b %e, %Y") %></li>
                <li><i class="fa fa-comments"></i> 17</li>
                <li><i class="fa fa-tags"></i> Metronic, Keenthemes, UI Design</li>
                <li><i class="fa fa-pencil"></i> <%= link_to 'Edit', edit_blog_path(@blog) %></li>
                <li><i class="fa fa-trash"></i> <%= link_to 'Delete', @blog, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>

              <h2>Comments</h2>
              <div class="comments">
                <div class="media">
                  <a href="javascript:;" class="pull-left">
                    <img src="/img/people/img1-small.jpg" alt="" class="media-object">
